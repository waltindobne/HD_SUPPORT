<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HD_SUPPORT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HD_SUPPORT.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="video-width">
        <video class="video-background" src="~/video.mp4" autoplay loop muted></video>
    </div>
    <header>
        <div class="img-text">
            <img src="~/Logo.png" alt="Logo">
            <h1>Support</h1>
        </div>
        <div>
            <nav>
                <ul>
                    <li><a>Login</a></li>
                    <li><a asp-area="" asp-controller="Administradores" asp-action="IndexAdministradores">Administradores</a></li>
                    <li><a asp-area="" asp-controller="Equipamentos" asp-action="IndexEquipamentos">Equipamentos</a></li>
                </ul>
            </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
